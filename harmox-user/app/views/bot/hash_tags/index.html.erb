<div class="container">

  <h2>HashTag登録</h2>
  <%= button_to "HashTagの追加", new_hash_tag_path, class: 'btn btn-info', method: 'get' %>

  <h2>HashTag一覧</h2>

  <div>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-condensed">
        <tr>
          <th>No.</th>
          <th>HashTag</th>
        </tr>
        <%  HashTag.all.each_with_index do |b, cnt| %>
          <tr>
            <td><%= cnt+1 %></td>
            <td><%= b.hash_tag %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
